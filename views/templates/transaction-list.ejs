<% if (transactions.length) { %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Reference</th>
        <th>Failure reason</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
    <% transactions.forEach(tx => { %>
      <tr>
        <td><span class="small muted"><%= tx._id %></span></td>
        <td><%= tx.recipientName %></td>
        <td><%= tx.recipientPhone %></td>
        <td><%= tx.amount %></td>
        <td><%= tx.status %></td>
        <td><%= tx.reference %></td>
        <td><%= tx.failureReason %></td>
        <td><%= tx.updatedAt.toLocaleString() %></td>
      </tr>
    <% }) %>
    </tbody>
  </table>
<% } else { %>
  <div class="alert alert-info">No transactions found.</div>
<% } %>